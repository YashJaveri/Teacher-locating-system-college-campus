<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:text="TextView"
        android:textColor="@color/mCustomWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:layout_marginEnd="6dp"
        android:text="TextView"
        android:textColor="@color/mCustomWhite"
        android:textSize="14sp"
        tools:text="NA" />

    <TextView
        android:id="@+id/txt_classroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_floor"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:layout_marginEnd="6dp"
        android:text="TextView"
        android:textColor="@color/mCustomWhite"
        android:textSize="14sp"
        tools:text="NA" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_dept"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="@color/mCustomWhite"
        android:textSize="14sp"
        tools:text="NA" />

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="-132dp"
        android:layout_toRightOf="@id/txt_dept"
        android:text="TextView"
        android:textColor="@color/mCustomWhite"
        android:textSize="14sp"
        tools:text="NA" />

    <TextView
        android:id="@+id/txt_dept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textColor="@color/mCustomWhite"
        android:textSize="14sp"
        tools:text="NA" />

</RelativeLayout>